@model DiplomaDataModel.YearTerm

@{
    ViewBag.Title = "Delete";
}

<h2>Delete Year/Term</h2>
@{ 
    if (ViewBag.ErrorMsg != null) {
        <h5 style="color:red">Error: @ViewBag.ErrorMsg</h5>
    }
}
<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>YearTerm</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Year)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Year)
        </dd>

        <dt>
            @switch (Model.Term)
            {
                case 10:
                    @("Winter");
                    break;
                case 20:
                    @("Spring/Summer");
                    break;
                case 30:
                    @("Fall");
                    break;
            }
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Term)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.IsDefault)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.IsDefault)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink("Back to List", "Index")
        </div>
    }
</div>
